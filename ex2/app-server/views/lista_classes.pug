extends layout

block content
	.w3-container
		.w3-panel.w3-blue.w3-center
			h1 Listagem das Classes
			pre Aqui encontrarás todas as classes de nível 1
	.w3-container
		table.w3-table-all.w3-centered
			thead
				tr
					th Código
					th Título
			tbody
				each classe in lista
					tr.w3-hover-blue
						td
							a(href='/classes/' + classe.codigo) #{classe.codigo}
						td= classe.titulo
	.w3-container.w3-center.w3-margin
		.w3-button.w3-blue.w3-margin
			a(href='/') Voltar ao Início